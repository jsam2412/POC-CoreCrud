@model List<CompanyViewModel>
@using CoreCrud.Models
<div>
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>

                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.CompanyName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>
                        <a id="editUserModal" data-toggle="modal" asp-action="GetCompanyInfo" asp-route-id="@item.Id" data-target="#modal-action-compnay"
                           class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>
                        <a id="deleteUserModal" data-toggle="modal" asp-action="DeleteCompany" asp-route-id="@item.Id" data-target="#modal-action-compnay" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>  Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-compnay", AreaLabeledId = "modal-action-user-label", Size = ModalSize.Large })
@section scripts
    {
    <script src="~/js/user-index.js" asp-append-version="true"></script>
    
}
